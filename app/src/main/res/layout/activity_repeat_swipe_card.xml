<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.manabu.activities.RepeatSwipe">

    <include
        android:id="@+id/repeat_swipe_toolbar_include"
        layout="@layout/toolbar_actionbar" />

    <ImageButton
        android:id="@+id/swipeTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repeat_swipe_toolbar_include"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused" />

</android.support.constraint.ConstraintLayout>
