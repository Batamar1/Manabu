<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="me.manabu.activities.ReviewActivity">

    <include
        android:id="@+id/reviewToolbarInclude"
        layout="@layout/toolbar_actionbar" />

    <ProgressBar
        android:id="@+id/reviewProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewToolbarInclude" />

    <TextView
        android:id="@+id/reviewDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:gravity="center"
        android:padding="@dimen/repeat_typeable_text_padding"
        android:textColor="@color/primary_background_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewProgressBar" />

    <ImageButton
        android:id="@+id/reviewButtonCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:selectableItemBackground"
        android:elevation="10dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewDescription"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_48px" />

    <EditText
        android:id="@+id/reviewTypeField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_review_bg"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:padding="8dp"
        android:paddingEnd="48dp"
        android:singleLine="true"
        android:text="gggggggggggggggggggggggrrrrr123"
        app:layout_constraintEnd_toStartOf="@+id/reviewButtonCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewDescription"
        tools:ignore="RtlSymmetry" />


</android.support.constraint.ConstraintLayout>
